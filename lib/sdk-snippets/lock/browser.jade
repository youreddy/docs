script
  function refresh (method, clientId) {
    $('#widget-demo').attr('src', '#{DOMAIN_URL_DOCS}/lock-demos/' + method + '?' + (clientId !== 'YOUR_CLIENT_ID' ? '&a=' + clientId : '') + '&callbackOnHash=#{callbackOnHashMode}');
  }

  $('#client-chooser').change(function (e) {
    var method = $('#widget-chooser').val();
    var clientId = $(this).val();
